{
	"exclude": [
		"node_modules",
		"dev",
		"dist",
		"gulpfile.js",
		"typings"
	],
	"compilerOptions": {
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"allowJs": true,
		"target": "es2015",
		"watch": false,
		"module": "commonjs",
		"sourceMap": true,
		"moduleResolution": "node",
		"removeComments": true
	}
}